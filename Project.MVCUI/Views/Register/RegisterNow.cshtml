@model RegisterNowPageVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegisterNow</title>
    <!-- Bootstrap core CSS -->
    <link href="~/OuterTools/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/OuterTools/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/OuterTools/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/css/style-responsive.css" rel="stylesheet" />
</head>
<body class="login-body">
    <div class="container">
        <h2>@ViewBag.ZatenVar</h2>
        @using (Html.BeginForm("RegisterNow", "Register", FormMethod.Post, new { @class = "form-signin" }))
        {
            <br />
            <center><h2>Register</h2></center>
            <div class="login-wrap">
                @Html.TextBoxFor(x => x.AppUser.Email, new { @class = "form-control", placeholder = "Email  belirleyin" })
                @Html.TextBoxFor(x => x.AppUser.UserName, new { @class = "form-control", placeholder = "Username  belirleyin" })
                @Html.PasswordFor(x => x.AppUser.PassWord, new { @class = "form-control", placeholder = "Sifre  belirleyin" })
                @Html.TextBoxFor(x => x.AppUserProfile.FirstName, new { @class = "form-control", placeholder = "Isim giriniz" })
                @Html.TextBoxFor(x => x.AppUserProfile.LastName, new { @class = "form-control", placeholder = "Soyisim Giriniz" })
                <center>
                    <button class="btn btn-primary">Register</button>
                </center>
                <br />
                <center>
                    @Html.ActionLink("Giris yap", "Login", "Home")
                </center>

            </div>
        }




    </div>
</body>
</html>
